<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
        <h1 class="text-xl">Create a new post.</h1>
        <hr class="opacity-10 mt-3">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input type="file" class="block text-white w-1/3 px-3 py-2" type="file" name="postimage">
            <input type="text" class="block text-black w-1/3 px-3 py-2 mt-2 border-2 rounded-md" name="title"
                placeholder="Title">
            <textarea type="text" class="block text-black h-40 w-1/3 px-3 py-2 mt-2 border-2 rounded-md"
                placeholder="Description" name="description"></textarea>
            <input type="submit" value="Create Post"
                class="block cursor-pointer w-1/3 px-3 py-2 mt-2 bg-red-700 rounded-md">
        </form>
    </div>
    <% include ./partials/footer.ejs %>
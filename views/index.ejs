<% include ./partials/header.ejs %>

  <div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
    <div class="w-[26vw] h-[70vh] bg-white px-10 py-2 login-card">
      <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo "
        class="img1 mx-auto" />

      <h1 class="text-3xl mb-4 text-center tracking-tighter leading-none font-semibold text-zinc-700 ">
        Welcome to
        Pinterest
      </h1>
      <form action="/login" method="post">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username"
          placeholder="username">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name='password'
          placeholder="password">
        <a class="mt-2 font-semibold text-zinc-500 inline-block" href="#">Forget password ?</a>
        <input
          class="border-2 cursor-pointer rounded-full block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full"
          type="submit" value="Login">
        <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to
          Pinterest's Terms of Services; Opens a new tab and acknowledge that you've read out Privacy Policy Notice at
          collection.</p>
      </form>
      <a class="inline-block mt-2 text-sm font-semibold text-zinc-700 text-center w-full" href="/register">Dont have an
        account
        ?</a>
    </div>
  </div>

  <% include ./partials/footer.ejs %>